{
    "extends": [
        "standard", "airbnb", "prettier", "plugin:node/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-underscore-dangle":"off",
        "camelcase": "off",
        "node/no-unsupported-features/es-syntax": "off"
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "parser": "babel-eslint"
}
